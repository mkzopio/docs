{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],

  "exclude": [
    "scripts/skip-ci.js",
    "snippets/components/index.js",
    "node_modules"
  ]
}
